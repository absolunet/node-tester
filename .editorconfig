# http://editorconfig.org

root = true

[*.js]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[{.editorconfig,.gitignore,.npmignore,package.json,.travis.yml}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
