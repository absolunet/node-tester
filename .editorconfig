# https://editorconfig.org

root = true

[*.{js,md}]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{.editorconfig,.gitignore,.npmignore}]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[package-lock.json]
indent_style = ignore
indent_size = ignore
end_of_line = ignore
charset = ignore
trim_trailing_whitespace = ignore
insert_final_newline = ignore
